{% extends 'layout.html.twig' %}

{% block content %}

    <section>
        <article>
            <h1>{{ ad.title }}</h1>

            {% if ad.photo is defined %}
                <img src="{{ asset('storage/images/' ~ ad.photo) }}" class="img-fluid">
            {% endif %}


            <p>
                le : {{ ad.createdAt | date('d/m/Y') }}
                appartient à la catégorie {{ ad.category.name }}
                par {{ ad.user.fullName }}
            </p>

            <p>
                {{ ad.content }}
            </p>
        </article>
    </section>
{% endblock %}